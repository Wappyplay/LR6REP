#include <iostream>
#include <iomanip>
#define _USE_MATH_DEFINES 
#include <math.h>
using namespace std;
int main()
{
    double x, y, z, a;
    printf("Введіть значення x, y, z: ");
    scanf("%lf %lf %lf", &x, &y, &z);
    double a1, a2, a3;
    a1= 3 + exp((y - 1));
    a2= 1 + pow((x), 2) * fabs((y - tan((z))));
    a3= tan((160) * M_PI / 180);
    a = a1 / a2 - a3;
    printf("Результат обчислeння: %.6f\n", a);
}
